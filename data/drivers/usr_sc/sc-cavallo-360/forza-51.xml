<!DOCTYPE params SYSTEM "params.dtd">


<params name="sc-cavallo-360">
  <section name="Features">
    <attstr name="enable abs" in="yes,no" val="yes"/>
    <attstr name="enable tcl" in="yes,no" val="yes"/>
    <attstr name="enable esp" in="yes,no" val="yes"/>
  </section>
  
  <section name="Brake System">
    <attnum name="front-rear brake repartition" min="0.3" max="0.65" val="0.3110"/>
    <attnum name="max pressure" unit="kPa" min="5000" max="50000" val="34100"/>
  </section>

  <section name="private">
    <attnum name="fuelperlap" val="2.25"/>
    <attnum name="avoid speed factor" val="0.7"/>
    <attnum name="avoid brake factor" val="0.7"/>
    <attnum name="exit boost factor" val="1.051"/>
    <attnum name="base speed" val="9.49"/>
    <attnum name="base brake" val="7.05"/>
    <attnum name="slope factor" val="0.504"/>
    <attnum name="accel exit" val="0.35"/>
    <attnum name="turn decel" val="0.55"/>
    <attnum name="revs change up" val="0.82"/>
    <attnum name="revs change down" val="0.62"/>
    <attnum name="revs change down max" val="0.74"/>
    <attnum name="int margin" val="1.7"/>
    <attnum name="ext margin" val="1.1"/>
    <attnum name="abs slip" val="1.95"/>
    <attnum name="tcl slip" val="4"/>
    <attnum name="bump caution" val="0.4"/>
    <attnum name="raceline debug" val="0"/>
	<attnum name="offtrack allowed" val="0"/>
  </section>
</params>

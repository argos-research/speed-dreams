<!DOCTYPE params SYSTEM "../tgf/params.dtd">

<params name="Screen" version="1.19">

	<section name="Validated Screen Properties">
		<attnum name="window width" val="1024"/>
		<attnum name="window height" val="600"/>
		<attnum name="bpp" val="32"/>
		<attstr name="full-screen" in="yes,no" val="no"/>
		<attstr name="stereo-vision" in="yes,no" val="no"/>
		<attstr name="alpha channel" in="yes,no" val="yes"/>
		<attnum name="gamma" val="1"/>
		<attstr name="video mode detect" in="auto,manual" val="auto"/>
		<attstr name="video mode init" in="compatible,best" val="compatible"/>
	</section>

	<section name="Menu Font">
		<attstr name="name" val="jura-normal.glf"/>
		<attnum name="size big" val="320"/>
		<attnum name="size large" val="230"/>
		<attnum name="size medium" val="200"/>
		<attnum name="size small" val="150"/>
	</section>

	<section name="Text Font">
		<attstr name="name" val="droid-sans-normal.glf"/>
		<attnum name="size big" val="320"/>
		<attnum name="size large" val="230"/>
		<attnum name="size medium" val="175"/>
		<attnum name="size small" val="150"/>
	</section>

	<section name="Console Font">
		<attstr name="name" val="liberation-sans-bold.glf"/>
		<attnum name="size big" val="320"/>
		<attnum name="size large" val="230"/>
		<attnum name="size medium" val="175"/>
		<attnum name="size small" val="150"/>
	</section>

	<section name="Digital Font">
		<attstr name="name" val="digital.glf"/>
		<attnum name="size big" val="6"/>
	</section>

	<section name="Mouse Cursor">
		<attstr name="image" val="data/img/mouse.png"/>
		<attnum name="offsetX" val="0"/>
		<attnum name="offsetY" val="0"/>
		<attnum name="width" val="32"/>
		<attnum name="height" val="32"/>
	</section>

